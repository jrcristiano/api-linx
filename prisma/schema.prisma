generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  lastname  String
  email     String   @unique
  password  String
  posts     Post[]
	emailVerifiedAt DateTime?
	deletedAt DateTime?
  createdAt DateTime @default(now())
	updatedAt DateTime?

  @@map("users")
}

model Post {
  id          Int      @id @default(autoincrement())
  title       String
  userId      Int
  user        User     @relation(fields: [userId], references: [id])

	deletedAt DateTime?
	createdAt DateTime @default(now())
	updatedAt DateTime?

  @@map("posts")
}
